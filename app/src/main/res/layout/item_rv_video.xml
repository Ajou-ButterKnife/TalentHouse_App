<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/rvvideo_video_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="대충 제목"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rvvideo_video_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="2021.01.01"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvvideo_video_tv_title" />

    <TextView
        android:id="@+id/rvvideo_video_tv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="김아무개"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/rvvideo_video_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/rvvideo_video_tv_title" />

    <TextView
        android:id="@+id/rvvideo_video_tv_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="asdlfjkafklwaefklawnflk;awejfklaewjflkawejflk;aewfjawekl;efjaweklfjaklfjaklwfe;jawef"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/rvvideo_video_tv_date"
        app:layout_constraintStart_toStartOf="@+id/rvvideo_video_tv_writer"
        app:layout_constraintTop_toBottomOf="@+id/rvvideo_video_player" />

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/rvvideo_video_player"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:use_controller="false"
        app:layout_constraintEnd_toEndOf="@+id/rvvideo_video_tv_date"
        app:layout_constraintStart_toStartOf="@+id/rvvideo_video_tv_writer"
        app:layout_constraintTop_toBottomOf="@+id/rvvideo_video_tv_writer"  />

</androidx.constraintlayout.widget.ConstraintLayout>